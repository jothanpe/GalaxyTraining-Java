package pe.edu.galaxy.training.java.jd0.matematicos;

public class AppPOO {
	
	public static void main(String[] args) {

		int a=1;
		a=a+1; // tradicional
		System.out.println(a);
		//a++; 
		System.out.println("...");
		a=1;
		System.out.println(a++);
		System.out.println(a++);
		System.out.println(++a);
		
		a=a-1;
		System.out.println(a);
		a=1;
		System.out.println(a--);
		System.out.println(--a);
		System.out.println("...");
		a=0;
		//a=a+5;
		//a=a-5
		//a=a*5
		//a=a/5
		//a=a%5
		
		a+=5; //OO
		
		System.out.println(a);
		a=10;
		System.out.println(a+=5);
		System.out.println(a-=5);
		System.out.println(a*=5);
		System.out.println(a/=5);
		System.out.println(a%=5);
	}

}
